<h1>Your Current Lists</h1>

  <% if @lists.any?() %>
<!-- This part will only be rendered if any lists are included -->
    <h3>Here are your lists:</h3>

    <ul>
      <% @lists.each() do |list| %>
        <li><a href="/lists/<%= list.id()%>"><%= list.name() %></a> </li>
      <% end %>
    </ul>

  <% else %>
<!-- if no lists are included, this text will show -->
      <p>There are no lists yet!</p>

  <% end %>
